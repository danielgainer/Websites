
@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/gallery.js")"></script>
}
<div class="container" style="background-color: #000000; background-color: rgba(0, 0, 0, 0.75); border-radius: 6px; padding: 35px;">
    <h2>Gallery</h2>
    <div id="mainArea">
        <div class="row">
            <div class="col-sm-6" id="slider-thumbs">
                <ul class="hide-bullets">
                    @for (int i = 1; i < 46; i++)
                    {
                        string url = string.Format(@"/Content/Images/carousel/{0}.png", i);
                        <li class="col-sm-3">
                            <a class="thumbnail img-responsive" id="carousel-selector-@(i-1)"><img src="@url" width="350" height="200"></a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-sm-6">
                <div class="col-xs-12" id="slider">
                    <!-- Top part of the slider -->
                    <div class="row">
                        <div class="col-sm-12" id="carousel-bounding-box">
                            <div class="carousel slide" id="myCarousel">
                                <!-- Carousel items -->
                                <div class="carousel-inner">
                                    @for (int i = 1; i < 46; i++)
                                    {
                                        string url = string.Format(@"/Content/Images/carousel/{0}.png", i);
                                        if (i == 1)
                                        {
                                            <div class="active item" data-slide-number="@(i-1)">
                                                <img src="@url" width="450">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="item" data-slide-number="@(i-1)">
                                                <img src="@url" width="450">
                                            </div>
                                        }
                                    }
                                </div>
                                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>